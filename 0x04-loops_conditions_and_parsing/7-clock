#!/usr/bin/env bash
# This script displays the time for 12 hours and respective minutes
h=-1
while [ $(( h++ )) ]
do
    m=0
    echo "Hour $h"
    if [ "$h" -eq 12 ]
    then
        break
    else
        while [ $(( m++ )) -lt 60 ]
        do
            if [[ "$m" -eq 60 ]]
            then
                break
            else
                echo "$m"
            fi
        done
    fi
done
